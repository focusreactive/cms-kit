{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_*",
    "SB_*",
    "SANITY_*",
    "NEXT_PREVIEW_TOKEN",
    "storyblokApiToken",
    "NODE_ENV",
    "VERCEL_ENV",
  ],
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "typecheck": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:turbo": {
      "cache": false,
      "persistent": true
    },
    "proxy": {
      "cache": false,
      "persistent": true
    }
  }
}
